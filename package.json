{
  "name": "custom-ui",
  "private": true,
  "scripts": {
    "cz": "czg",
    "dev": "vite example",
    "dev:demo": "pnpm -C demos/demo dev",
    "build:wow": "pnpm -C demos/wow build",
    "prepare": "husky install",
    "lint:eslint": "eslint \"**/*.{vue,js,ts,jsx,tsx}\" --max-warnings 20 --cache --fix  --cache-location node_modules/.cache/eslint/.eslintcache",
    "lint:prettier": "prettier --write --cache .",
    "lint:stylelint": "stylelint --cache --fix \"**/*.{vue,less,postcss,css,scss}\"  --cache-location node_modules/.cache/stylelint/",
    "lint:lint-staged": "lint-staged",
    "type:check": "vue-tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "@custom-ui/components": "workspace:*",
    "@custom-ui/theme-chalk": "workspace:*",
    "@custom-ui/utils": "workspace:*"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "cz-git": "^1.6.1",
    "czg": "^1.6.1",
    "eslint": "^8.41.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.14.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.24",
    "postcss-html": "^1.5.0",
    "postcss-less": "^6.0.0",
    "prettier": "^2.8.8",
    "stylelint": "^15.6.2",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-order": "^6.0.3",
    "terser": "^5.17.6",
    "typescript": "^5.0.4",
    "vite": "^4.3.7",
    "vue": "^3.2.36",
    "vue-eslint-parser": "^9.3.0",
    "vue-router": "4",
    "vue-tsc": "^1.6.5"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.vue": [
      "eslint --fix",
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{scss,less,html,vue}": [
      "stylelint --fix",
      "prettier --write"
    ]
  }
}
